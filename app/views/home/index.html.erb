<table class="business-tags table table-bordered table-striped" id="user">
  <thead class="table-dark">
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Image</th>
      <% if current_user.user? %>
        <th>Action</th>
      <% end %>  
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= current_user.email %></td>
      <td><%= current_user.first_name %></td>
      <td><%= current_user.last_name %></td>
      <td><%= current_user.profile %></td>
    <% if current_user.user? %>
      <td><%= link_to 'Edit Profile', edit_user_registration_path(current_user), class: "btn btn-primary" %></td>
    <% end %>
    </tr>
  </tbody>
</table>